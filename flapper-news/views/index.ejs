<html>

<head>
    <title>Flapper News</title>
    <!-- <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script> -->

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-touch.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.3.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href='/stylesheets/style.css'></link>



    <script src="/javascripts/flapperNews.module.js"></script>
    <script src="/javascripts/angularApp.js" /></script>
    <script src="/controllers/MainController.js"></script>
    <script src="/controllers/AuthController.js"></script>
    <script src="/controllers/NavController.js"></script>
    <script src="/controllers/CommentController.js"></script>
    <script src="/controllers/UserController.js"></script>
    <script src="/services/authService.js"></script>
    <script src="/services/postService.js"></script>
    <script src="/services/commentService.js"></script>
    <script src="/services/userService.js"></script>
    <style>
        .glyphicon-thumbs-up {
            cursor: pointer;
        }

        .glyphicon-thumbs-down {
            cursor: pointer;
        }
    </style>
    <style type="text/css">
        form.tab-form-demo .tab-pane {
            margin: 20px 20px;
        }
    </style>
</head>

<body ng-app="flapperNews">
    <nav class="navbar navbar-default pull-right" ng-controller="NavController as ctrl">
        <ul class="nav navbar-nav">
            <li ng-show="ctrl.isLoggedIn()"><a>{{ ctrl.currentUser() }}</a></li>
            <li ng-show="ctrl.isLoggedIn()"><a href="" ng-click="ctrl.logOut()">Log Out</a></li>
            <li ng-show="ctrl.isLoggedIn()"><a href="/#/myprofile/{{ctrl.userID}}">My profile</a></li>
            <li ng-hide="ctrl.isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="ctrl.isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ui-view></ui-view>
        </div>
    </div>


    <!-- Home -->
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>
        <div ng-repeat="post in ctrl.posts | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up" ng-click="ctrl.incrementUpvotes(post)"></span>
            <span class="glyphicon glyphicon-thumbs-down" ng-click="ctrl.incrementDownvotes(post)"></span> {{post.upvotes}}
            <span style="font-size:20px; margin-left:10px;">
                    <a ng-show="post.link" href="{{post.link}}">
                        {{post.title}}
                    </a>
                    <span ng-hide="post.link">
                        {{post.title}}
                    </span>
            </span>
            <span ng-show="post.author">
                  posted by <a>{{post.author}}</a> |
            </span>
            <span>
                    <a href="#/posts/{{post._id}}/comments">Comments</a>
           </span>

        </div>
        <form ng-submit="ctrl.addPost()" ng-show="ctrl.isLoggedIn()" style="margin-top:30px;">
            <h3>Add a new post</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Title" ng-model="ctrl.title"></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Link" ng-model="ctrl.link"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
        <div ng-hide="ctrl.isLoggedIn()">
            <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
        </div>
    </script>


    <!-- Posts -->
    <script type="text/ng-template" id="/posts.html">
        <div>
            <div class="page-header">
                <h3>
                    <a ng-show="ctrl.post.link" href="{{ctrl.post.link}}">
                        {{ctrl.post.title}}
                    </a>
                    <span ng-hide="ctrl.post.link">
                        {{ctrl.post.title}}
                    </span>
                </h3>
            </div>

            <div ng-repeat="comment in ctrl.comments | orderBy:'-upvotes'">
                <span class="glyphicon glyphicon-thumbs-up" ng-click="ctrl.incrementUpvotes(comment)"></span>
                <span class="glyphicon glyphicon-thumbs-down" ng-click="ctrl.incrementDownvotes(comment)"></span> {{comment.upvotes}} - by {{comment.author}}
                <span style="font-size:20px; margin-left:10px;">
                    {{comment.body}}
                </span>
            </div>

            <form ng-submit="ctrl.addComment()" ng-show="ctrl.isLoggedIn()" style="margin-top:30px;">
                <h3>Add a new comment</h3>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Comment" ng-model="ctrl.body"></input>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
            <div ng-hide="ctrl.isLoggedIn()">
                <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
            </div>
        </div>
    </script>

    <!-- Register -->
    <script type="text/ng-template" id="/register.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

        <div ng-show="ctrl.error" class="alert alert-danger row">
            <span>{{ ctrl.error.message }}</span>
        </div>

        <form ng-submit="ctrl.register()" style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="ctrl.user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="ctrl.user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>

    <!-- Login -->
    <script type="text/ng-template" id="/login.html">
        <div class="page-header">
            <h1>Flapper News</h1>
        </div>

        <div ng-show="ctrl.error" class="alert alert-danger row">
            <span>{{ ctrl.error.message }}</span>
        </div>

        <form ng-submit="ctrl.logIn()" style="margin-top:30px;">
            <h3>Log In</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="ctrl.user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="ctrl.user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </script>

    <!-- My Profile -->
    <script type="text/ng-template" id="/myprofile.html">
        <div>

            <form name="outerForm" class="tab-form-demo">
                <uib-tabset active="activeForm">
                    <uib-tab class="nav nav-tabs" index="0" heading="My profile">
                        <ng-form name="nestedForm" ng-init="ctrl.getUser()">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" required ng-model="ctrl.user.username" />
                                <label>Firstname</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                                <label>Lastname</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                                <label>Gender</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                                <label>Email</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                                <label>Birthday</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                                <label>Address</label>
                                <input type="text" class="form-control" required ng-model="model.name" />
                            </div>
                        </ng-form>
                    </uib-tab>
                    <uib-tab index="1" heading="Posts">
                        <div ng-controller="MainController as ctrl">
                            <div ng-repeat="post in ctrl.posts | orderBy:'-upvotes' | filter: {author:'test2'}">
                                <span class="glyphicon glyphicon-thumbs-up" ng-click="ctrl.incrementUpvotes(post)"></span>
                                <span class="glyphicon glyphicon-thumbs-down" ng-click="ctrl.incrementDownvotes(post)"></span> {{post.upvotes}}
                                <span style="font-size:20px; margin-left:10px;">
                                  <a ng-show="post.link" href="{{post.link}}">
                                      {{post.title}}
                                  </a>
                                  <span ng-hide="post.link">
                                      {{post.title}}
                                  </span>
                                </span>
                                <span ng-show="post.author">
                                posted by <a>{{post.author}}</a>
                          </span>


                            </div>
                        </div>
                    </uib-tab>
                    <uib-tab index="2" heading="Comments">
                        <div ng-controller="CommentController as ctrl">
                            <div ng-repeat="comment in ctrl.allComments | orderBy:'-upvotes' | filter:{author:'test2'}">
                                <span class="glyphicon glyphicon-thumbs-up" ng-click="ctrl.incrementUpvotes(comment)"></span>
                                <span class="glyphicon glyphicon-thumbs-down" ng-click="ctrl.incrementDownvotes(comment)"></span> {{comment.upvotes}} - by {{comment.author}}
                                <span style="font-size:20px; margin-left:10px;">
                              {{comment.body}}
                          </span>
                            </div>
                        </div>
                    </uib-tab>
                </uib-tabset>
            </form>
        </div>
    </script>
</body>

</html>
