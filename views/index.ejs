<html>

<head>
    <title>Flapper News</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href='/stylesheets/style.css'></link>
    <link rel="stylesheet" type="text/css" href='/stylesheets/animate.css'></link>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

</head>

<body ng-app="flapperNews">
    <div class="container-narrow">
        <nav class="navbar navbar-masthead navbar-default" ng-controller="NavController as ctrl" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-click="isNavCollapsed = !isNavCollapsed">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
            </div>
            <div class="collapse navbar-collapse" uib-collapse="isNavCollapsed">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="glyphicon glyphicon-home" href="/#/home"></a>
                    </li>
                    <li ng-show="ctrl.isLoggedIn()"><a>{{ ctrl.currentUser() }}</a></li>
                    <li ng-show="ctrl.isLoggedIn()"><a href="/#/myprofile/{{ctrl.userID}}">My profile</a></li>
                    <li><button class="btn btn-default navbar-btn" ng-show="ctrl.isLoggedIn()" ng-click="ctrl.logOut()">Log Out</button></li>
                    <li ng-hide="ctrl.isLoggedIn()"><a href="/#/login">Log In</a></li>
                    <li ng-hide="ctrl.isLoggedIn()"><a href="/#/register">Register</a></li>
                </ul>
            </div>
        </nav>
        <div>
            <div>
                <ui-view></ui-view>
            </div>
            <hr>
            <footer class="footer">
                <div>
                    <p>Pol De Puysseleyr</p>
                </div>
            </footer>
        </div>
    </div>


    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-touch.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.3.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/flapperNews.module.js"></script>
    <script src="/javascripts/angularApp.js" /></script>
    <script src="/controllers/MainController.js"></script>
    <script src="/controllers/AuthController.js"></script>
    <script src="/controllers/NavController.js"></script>
    <script src="/controllers/CommentController.js"></script>
    <script src="/controllers/UserController.js"></script>
    <script src="/directives/errorsDirective.js"></script>
    <script src="/directives/postsDirective.js"></script>
    <script src="/services/authService.js"></script>
    <script src="/services/postService.js"></script>
    <script src="/services/commentService.js"></script>
    <script src="/services/userService.js"></script>

</body>

</html>
